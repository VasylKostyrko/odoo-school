<odoo>
        <record id="new_lib_client_tree" model="ir.ui.view">
            <field name="name">new.lib.client.tree ()</field>
            <field name="model">new.lib.client</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="first_name"/>
                    <field name="last_name"/>
                </tree>
            </field>
        </record>

        <record id="new_lib_client_form" model="ir.ui.view">
            <field name="name">new.lib.client.form ()</field>
            <field name="model">new.lib.client</field>
            <field name="arch" type="xml">
                <form>
                    <header></header>
                    <sheet>
                        <group>
                            <field name="first_name"/>
                            <field name="last_name"/>
                            <field name="about"/>
                            <field name="birthday"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="new_lib_client_act_window" model="ir.actions.act_window">
            <field name="name">Client</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">new.lib.client</field>
            <field name="view_mode">tree,form</field>
<!--            <field name="view_mode">tree,form,kanban</field>-->
        </record>
        <menuitem id="new_lib_client_menu"
                  action="new_lib_client_act_window"
                  parent="new_lib_catalog_menu"
                  name="Client" sequence="240"/>

